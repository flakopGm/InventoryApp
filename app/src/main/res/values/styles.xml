<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Estilo para los Relative Layout Similares. -->
    <style name="RelativeDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <!-- Estilo para el ListView. -->
    <style name="ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:divider">@color/colorAccent</item>
        <item name="android:dividerHeight">2dp</item>
    </style>

    <!-- Estilo para la Imagen del EmptyView. -->
    <style name="ImagenEmptyView">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">@drawable/almacen</item>
    </style>

    <!-- Estilo para el texto del EmptyView. -->
    <style name="TextoEmptyView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_below">@id/foto_empty_view</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textAppearance">
            @style/Base.TextAppearance.AppCompat.SearchResult.Title
        </item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:text">@string/text_empty_view</item>
    </style>

    <!-- Estilo para el icono de la vista vacía. -->
    <style name="IconoProductoNuevoEmptyView">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:src">@drawable/new_product1</item>
        <item name="android:layout_below">@id/texto_empty_view</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <!-- Estilo para el botón flotante. -->
    <style name="EstiloFab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:src">@drawable/new_product1</item>
    </style>

    <!-- Estilo para los scrollview. -->
    <style name="ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <!-- Estilo para el texto superior de la foto. -->
    <style name="TextoInfoFoto">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:text">@string/info_cambio_foto</item>
    </style>

    <!-- Estilo para la imagen de la foto. -->
    <style name="ImagenAddProducto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">220dp</item>
        <item name="android:layout_height">220dp</item>
        <item name="android:layout_below">@id/instrucciones_img</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">@drawable/new_image</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ViewFotoEdicionProduct">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_below">@id/imagen_producto</item>
    </style>

    <!-- Estilo para el texto inferior de la foto del producto. -->
    <style name="TextoImagenProducto">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_below">@id/imagen_producto</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:text">@string/texto_imagen_producto</item>
    </style>

    <!-- Estilo para el nombre del producto. -->
    <style name="NombreProducto">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/text_image_product</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:text">@string/nombre_producto</item>
    </style>

    <!-- Estilo para el EditText del nombre. -->
    <style name="EditTextNombre">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/text_image_product</item>
        <item name="android:layout_toRightOf">@id/nombre_producto_tv</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">22dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:hint">@string/new_product</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:maxLength">12</item>
    </style>

    <!-- Estilo para el Precio del producto. -->
    <style name="PrecioProducto">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/nombre_producto_tv</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:text">@string/precio_producto</item>
    </style>

    <!-- Estilo para el Edittext del precio. -->
    <style name="EditTextPrecio">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/textview_product_name</item>
        <item name="android:layout_toRightOf">@id/precio_producto</item>
        <item name="android:layout_marginLeft">27dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:hint">@string/hint_precio</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <!-- Estilo para el Proveedor. -->
    <style name="Proveedor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/precio_producto</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:text">@string/proveedor</item>
    </style>

    <!-- Estilo para el EditText del proveedor. -->
    <style name="EditTextProveedor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/textview_text_price</item>
        <item name="android:layout_toRightOf">@id/proveedor</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginLeft">69dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:hint">@string/hint_proveedor</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:maxLength">12</item>
    </style>

    <!-- Estilo para la cantidad. -->
    <style name="Cantidad">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/proveedor</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:text">@string/cantidad</item>
    </style>

    <!-- Estilo para el EditText de la cantidad del producto. -->
    <style name="EditTextCantidad">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/textview_text_provider</item>
        <item name="android:layout_toRightOf">@id/cantidad_producto</item>
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:hint">@string/hint_cantidad</item>
        <item name="android:inputType">number</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <!-- Estilo para los textos en la pantalla de gestión del producto. -->
    <style name="TextosPantallaGestion">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- Estilo para los textos de la info del producto. -->
    <style name="InfoTextPantallaGestion">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:gravity">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- Estilo para el view de cantidad. -->
    <style name="ViewCantidad">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_below">@id/textview_ventas</item>
    </style>

    <!-- Estilo para los textos cambiante. -->
    <style name="TextoCambiante">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_below">@id/view_cantidad</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:text">@string/texto_cambiante</item>
    </style>

    <!-- Estilo para los botones de sumar o restar stock. -->
    <style name="BotonesCantidad">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_below">@id/cantidad_producto</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!-- Estilo para la cantidad de producto. -->
    <style name="EditTextCantidadGestion">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/cantidad_producto</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_toRightOf">@id/restar_stock</item>
        <item name="android:layout_toLeftOf">@id/sumar_stock</item>
        <item name="android:hint">@string/hint_cantidad</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:inputType">number</item>
        <item name="android:textColorHint">@color/colorHint</item>
    </style>

    <!-- Estilo para el icono de solicitar mercancia. -->
    <style name="IcomoMercancia">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_below">@id/quantity</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">@drawable/provider</item>
    </style>

    <!-- Estilo para el view superior de la imagen del producto. -->
    <style name="ViewImageSuperior">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_below">@id/solicitar_mercancia</item>
    </style>

    <!-- Estilo para la foto del producto en la pantalla de gestión-->
    <style name="FotoProductoPantallaGestion">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">290dp</item>
        <item name="android:minHeight">290dp</item>
        <item name="android:layout_below">@id/view_img_superior</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/new_image</item>
        <item name="android:onClick">avisoCambioImagen</item>
    </style>

    <!-- Estilo para el view inferior de la imagen del producto. -->
    <style name="ViewInferiorFotoProduct">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_below">@id/imagen_producto</item>
    </style>

    <!-- Estilo para el LinearLayout del ListView. -->
    <style name="LinearListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Estilo para la imagen del producto en el ListView -->
    <style name="ImagenProductoListView">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- Estilo para el view superior de la imagen del producto en el ListView -->
    <style name="ViewImageListView">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <!-- Estilo para el nombre del producto en el ListView -->
    <style name="NombreProductoListView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@color/colorAppOscuro</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo para el stock del producto en el ListView -->
    <style name="StockProductoListView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/fondo_stock_disponible</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo para el view nombre del producto en el ListView -->
    <style name="ViewNombreProductoListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_below">@id/producto_name</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_toLeftOf">@id/cantidad</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <!-- Estilo para el precio del producto en el ListView -->
    <style name="PrecioProductListView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/producto_name</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
    </style>

    <!-- Estilo para el proveedor del producto en el ListView -->
    <style name="ProveedorListView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/precio</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
    </style>

    <!-- Estilo para las ventas del producto en el ListView -->
    <style name="VentasProducto">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>5
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Estilo para el botón de compre de cada producto en el ListView -->
    <style name="BotonCompra">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@drawable/fondo_boton_compra</item>
        <item name="android:src">@drawable/comprar_producto</item>
    </style>

    <!-- Estilo para los toast personalizados. -->
    <style name="ToastPersonalizado">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:paddingBottom">50dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:background">@drawable/fondo_toast</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">
            @style/TextAppearance.AppCompat.Light.SearchResult.Title
        </item>
        <item name="android:text">@string/cambio_imagen_text</item>
    </style>

    <!-- Estilo para la imagen del toast personalizado -->
    <style name="ImagenToastPersonalizado">
        <item name="android:layout_width">40dp</item>
